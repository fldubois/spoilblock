{
  "manifest_version": 2,

  "name": "SpoilBlock",
  "version": "0.0.0",

  "description": "No more spoiler !",
  "author": "Florent Dubois <florent.dubois@devaddict.io>",

  "homepage_url": "https://github.com/fldubois/spoilblock",

  "icons": {
    "48": "icons/logo.svg",
    "96": "icons/logo.svg"
  },

  "incognito": "spanning",

  "permissions": [
    "activeTab",
    "webNavigation",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/logo.svg",
    "default_title": "SpoilBlock"
  },

  "page_action": {
    "default_icon": "icons/logo-enabled.svg",
    "default_title": "Show all spoilers"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/mask.css"]
    }
  ]
}
