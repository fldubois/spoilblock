{
  "manifest_version": 2,

  "name": "SpoilBlock",
  "version": "0.0.0",

  "description": "No more spoiler !",
  "author": "Florent Dubois <florent.dubois@devaddict.io>",

  "homepage_url": "https://github.com/fldubois/spoilblock",

  "default_locale": "en",

  "icons": {
    "48": "icons/logo.svg",
    "96": "icons/logo.svg"
  },

  "incognito": "spanning",

  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "commands": {
    "report": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Toggle spoiler reporter"
    }
  },

  "browser_action": {
    "default_icon": "icons/logo.svg",
    "default_title": "SpoilBlock",
    "default_popup": "html/popup.html"
  },

  "page_action": {
    "default_icon": "icons/logo-enabled.svg",
    "default_title": "Show all spoilers"
  },

  "background": {
    "scripts": ["js/background/spoilblock.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content/mask.js"],
      "css": ["css/mask.css"],
      "run_at": "document_end"
    }
  ]
}
